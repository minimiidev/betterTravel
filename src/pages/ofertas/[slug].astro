---
import PortableTextComponent from "@/components/portableText/PortableTextComponent.astro";
import SocialContainer from "@/components/shared/SocialContainer.astro";
import WhatsApp from "@/components/shared/socials/WhatsApp.astro";
import Layout from "@/layouts/Layout.astro";
import { getOffer } from "@/utils/sanity";

const { slug = "" } = Astro.params ?? "";
// console.log("ðŸš€ ~ slug:", slug);
const flyer = await getOffer(slug);
// console.log("ðŸš€ ~ flyer:", flyer);

const { name, imgSrc, description } = flyer;
---

<Layout title={`Viaja por ${name}`}>
  <section class="w-full pb-10 text-black pt-[120px]">
    <div class="container">
      <button onclick="history.back()" class="pb-3 mb-2 opacity-70"
        >{`<--- Volver atras`}</button
      >
      <article
        class="flex flex-col items-center justify-center w-full h-full gap-10 md:items-start lg:justify-between md:flex-row"
      >
        <!-- w-[300px] md:w-[400px] lg:min-w-[600px] -->
        <div
          class="overflow-hidden w-auto lg:min-w-[500px] h-[300px] md:h-[400px] md:min-w-[400px] lg:h-[500px]"
        >
          <img src={imgSrc} class="object-fill w-full h-full rounded-2xl" />
        </div>
        <div>
          <div class="lg:pl-10">
            <div class="flex flex-col items-center justify-between mb-5">
              <h1 class="h1">{name}</h1>
            </div>
            <PortableTextComponent value={description} />
          </div>
        </div>
      </article>
      <div class="flex items-center justify-center mt-10">
        <WhatsApp
          class:list={`px-4 py-2 bg-green-500 hover:bg-green-800 text-white`}
        />
      </div>
    </div>
  </section>
</Layout>
