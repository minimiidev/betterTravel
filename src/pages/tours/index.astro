---
import ProductCard from "@/components/products/ProductCard.astro";
import Layout from "@/layouts/Layout.astro";
import { getAllTours } from "@/utils/sanity";
const allTours = await getAllTours();
---

<Layout
  title="Ofertas"
  description="Descubre las mejores ofertas en viajes personalizados y paquetes todo incluido desde Santo Domingo. Descubre el Caribe con nosotros."
  keywords={["ofertas", "descuentos", "promociones"]}
>
  <section id="ofertas" class="w-full pt-[150px] pb-10 text-black">
    <div class="container flex flex-col items-center justify-center">
      <p class="mb-2 p">Todos los</p>
      <h1 class="mb-10 h1">Tours</h1>
      <div
        class="grid w-full grid-cols-1 gap-12 md:grid-cols-2 xl:grid-cols-3 justify-items-center"
      >
        {allTours.map((d) => <ProductCard {...d} />)}
      </div>
    </div>
  </section>
</Layout>
