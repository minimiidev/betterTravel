---
import { Image } from "astro:assets";

import { info, links } from "@/data";
import WhatsApp from "../shared/socials/WhatsApp.astro";
import Instagram from "../shared/socials/Instagram.astro";
const {
  address,
  email,
  tel,
  socials: { facebook, instagram, twitter, whatsapp },
} = info;

import logo from "@/assets/logo.png";
import Address from "../shared/socials/Address.astro";
import Email from "../shared/socials/Email.astro";
import Telephone from "../shared/socials/Telephone.astro";

export const prerender = true;
---

<footer
  id="footer"
  class="relative flex flex-col items-center justify-center w-full pt-32 pb-20"
>
  <div
    class="bg-[rgb(47,106,127)] w-full absolute top-0 bottom-0 mix-blend-hard-light z-[1]"
  >
  </div>

  <section
    class="container z-10 flex flex-wrap items-start justify-center w-full md:justify-between h-max gap-x-4 gap-y-4 md:gap-x-6"
  >
    <article
      class="md:mt-5 lg:mt-0 min-w-[220px] min-h-max lg:order-[0] order-10 md:w-[400px] md:h-[400px]"
    >
      <Image
        width={500}
        height={500}
        src={logo}
        alt="Better Travel Logo"
        class="w-[200px] h-[100px] object-cover lg:w-full lg:h-full"
      />
    </article>
    <article
      class="flex flex-col [&>a:hover]:underline [&>a:hover]:text-orange-500 [&>a]:font-medium [&>a]:py-3 transition-all duration-300 ease-in-out lg:min-w-[120px] max-w-[100px]"
    >
      <h3 class="mb-4 h3">Menu</h3>
      {
        links.map((link) => (
          <li class="font-medium list-none">
            <a href={link.path} class="block px-2 py-3 hover:bg-sky-500 ">
              {link.text}
            </a>
          </li>
        ))
      }
    </article>

    <article
      class="flex flex-col items-start justify-center gap-4 lg:max-w-[40%] w-full max-w-[220px] md:max-w-[300px] order-3"
    >
      <h3 class="h3">Informacion</h3>

      <WhatsApp class:list={" hover:bg-green-500 "} />
      <Instagram class:list={" hover:bg-rose-500 "} />
      <div class="flex flex-col items-start justify-center w-full gap-4 pl-4">
        <Address />
        <Email />
        <Telephone />
      </div>
    </article>
    <article class="order-10 w-full text-center">
      <p class="inline-block mt-10 p opacity-80">
        Better Travel Â©{new Date().getFullYear()} | Desarrollado por
      </p>
      <a
        href="https://painkillerdev.vercel.app"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-block underline hover:cursor-pointer hover:no-underline hover:text-slate-600"
        >PainDev</a
      >
    </article>
  </section>
</footer>
