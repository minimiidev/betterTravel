---
import { loadQuery } from "@/lib/loadQuery";
import ResortCard from "../products/ResortCard.astro";
import type Destinations from "@/inferfaces/Destinations";

const hotels = await loadQuery<Destinations[]>({
  query: `*[_type == "resort"]
  {name,
  "slug": slug.current,
  location,
  price,
  currency,
  "imgSrc": image.asset->url,
  }
  `,
});
const { data } = hotels;
