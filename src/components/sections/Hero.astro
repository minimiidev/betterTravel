---

<section
  id="#home"
  class="w-full relative flex pt-20 pb-10 items-center justify-center m-auto"
>
  <!-- Filtro -->
  <div
    class="bg-[rgb(47,106,127)] w-full absolute top-0 bottom-0 mix-blend-hard-light z-[1]"
  >
  </div>

  <!-- Video de fondo -->
  <!-- <video
    src={beachBg}
    autoplay
    loop
    muted
    class="w-full absolute h-full top-0 bottom-0 object-cover"></video> -->

  <!-- Hero -->
  <div
    class="text-white py-10 gap-8 h-max w-full container flex flex-col items-stretch justify-center m-auto
    z-50"
  >
    <!-- Header -->
    <article class="">
      <span class="text-sm uppercase">Nuestros Paquetes</span>
      <h1
        class="md:text-5xl font-poppins text-4xl font-bold tracking-wide w-full"
      >
        Planea tus Vacaciones
      </h1>
    </article>
    <!-- Form -->
    <article class="">
      <form
        action=""
        class="relative lg:h-max pb-10 flex flex-col md:flex-row md:justify-between lg:flex-row lg:justify-around w-full items-start [&>div]:w-full gap-4 justify-start bg-white p-4 rounded-md shadow-md"
      >
        <div>
          <label for="option">Selecciona tu destino: </label>
          <div>
            <select name="option" id="option" class="text-black bg-inherit">
              <option value="resort" selected>Resort</option>
              <option value="hotel">Hotel</option>
              <option value="tour">Tour</option>
              <option value="hotel">Hotel</option>
              <option value="hotel">Hotel</option>
            </select>

            <Icon
              name="material-symbols:location-on-outline"
              size="32px"
              class="mr-2"
            />
          </div>
        </div>
        <div>
          <label for="date">Selecciona la fecha: </label>

          <div>
            <input type="date" name="date" id="date" />
          </div>
        </div>
        <div>
          <label for="price">Precio Maximo: </label>

          <div>
            <input type="text" name="price" id="price" placeholder="$10000" />
          </div>
        </div>
        <button
          type="submit"
          class="px-5 font-bold inset-x-0 m-auto absolute -bottom-6 shadow-md tracking-wide rounded-xl mt-5 py-3 bg-sky-500 flex items-center justify-center w-[140px] gap-2"
        >
          Buscar
          <Icon name="mdi:search" size="24px" class="tracking-wide" />
        </button>
      </form>
    </article>
  </div>

  <!-- <div class="container flex-col mt-[50px] flex items-center justify-center">
    <article class="mb-20">
      <h1 class="h1 font-poppins">Better Travel</h1>
      <h3 class="h3">Tu agencia de viajes</h3>
    </article> -->

  <!-- Slider main container -->
  <!-- <SlideShow /> -->
</section>

<style>
  form div div {
    @apply flex lg:w-[320px] rounded-xl  items-center justify-center  w-full bg-sky-500;
  }
  form label {
    @apply text-gray-500 py-2  block;
  }
  input {
    @apply px-4 text-sm py-3 border-none w-full flex-1 text-black bg-transparent outline-none;
  }
  input::placeholder {
    @apply text-black;
  }
</style>
