---
// import "swiper/css";
// import "swiper/css/pagination";

// import { beachBg } from "@/assets/videos";
import Icon from "astro-iconify";
import WhatsApp from "../shared/socials/WhatsApp.astro";
import Instagram from "../shared/socials/Instagram.astro";
import SocialContainer from "../shared/SocialContainer.astro";
// import SlideShow from "../shared/SlideShow.astro";

import { info } from "@/data";
import bgHero from "@/assets/bgHero.webp";
import Image from "astro/components/Image.astro";
---

<section
  id="home"
  class="relative z-10 m-auto mb-[80px] flex w-full items-center justify-center pt-24 md:mb-20 md:pb-16 lg:mb-[210px] lg:pb-[10px] lg:pt-[150px]"
>
  <!-- Filtro -->
  <Image
    loading="eager"
    src={bgHero}
    alt=""
    widths={[1200, 1920]}
    height={1080}
    quality={"max"}
    class="absolute bottom-0 top-0 -z-30 aspect-[16/9] h-[120%] w-full overflow-hidden object-cover object-left-bottom shadow-sky-500 md:bottom-[500px] md:h-[500px] md:object-fill lg:h-[160%] lg:object-cover lg:object-bottom"
  />

  <!-- Video de fondo -->
  <!-- <video
    src={beachBg}
    autoplay
    loop
    muted
    class="absolute top-0 bottom-0 object-cover w-full h-full"></video> -->

  <!-- Hero -->
  <div
    class="container z-10 flex flex-col items-stretch justify-center w-full gap-8 py-10 m-auto h-max"
  >
    <!-- Header -->
    <article class="">
      <span class="text-sm uppercase">Nuestros Paquetes</span>
      <h1 class="h1">Planea tus Vacaciones</h1>
      <!-- SOCIAL -->
      <SocialContainer class:list={"mt-10"}>
        <WhatsApp class:list={"bg-green-500 hover:bg-green-800 text-white"} />
        <Instagram class:list={"text-white bg-rose-500 hover:bg-rose-800"} />
      </SocialContainer>
    </article>
    <!-- Form -->
    <article class="">
      <form
        action=""
        class="relative lg:h-max pb-10 flex flex-col md:flex-row md:justify-between lg:flex-row lg:justify-around w-full items-start [&>div]:w-full gap-4 justify-start bg-white p-4 rounded-md shadow-md"
      >
        <div>
          <label for="option">Selecciona tu destino: </label>
          <div>
            <select name="option" id="option" class="text-black bg-inherit">
              <option value="resort" selected>Resort</option>
              <option value="hotel">Hotel</option>
              <option value="tour">Tour</option>
              <option value="hotel">Hotel</option>
              <option value="hotel">Hotel</option>
            </select>

            <Icon
              name="material-symbols:location-on-outline"
              size="32px"
              class="mr-2"
            />
          </div>
        </div>
        <div>
          <label for="date">Selecciona la fecha: </label>

          <div>
            <input type="date" name="date" id="date" />
          </div>
        </div>
        <div>
          <label for="price">Precio Maximo: </label>

          <div>
            <input type="text" name="price" id="price" placeholder="$10000" />
          </div>
        </div>
        <button
          type="submit"
          class="px-5 font-bold inset-x-0 m-auto absolute -bottom-6 shadow-md tracking-wide rounded-xl mt-5 py-3 bg-sky-500 flex items-center justify-center w-[140px] gap-2"
        >
          Buscar
          <Icon name="mdi:search" size="24px" class="tracking-wide" />
        </button>
      </form>
    </article>
  </div>
</section>

<style>
  form div div {
    @apply flex lg:w-[320px] rounded-xl  items-center justify-center  w-full bg-sky-500;
  }
  form label {
    @apply text-gray-500 py-2  block;
  }
  input {
    @apply px-4 text-sm py-3 border-none w-full flex-1 text-black bg-transparent outline-none;
  }
  input::placeholder {
    @apply text-black;
  }
</style>
