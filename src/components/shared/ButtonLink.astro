---
interface Props {
  href: string;
  text: string;
  class?: string;
}

const { href, text } = Astro.props;
---

<a
  href={href}
  aria-label={text}
  class:list={[
    "min-w-[150px] text-white rounded-3xl p px-5 py-3 text-center font-medium hover:scale-95 transition-all duration-300 ease-in-out",
    Astro.props.class,
  ]}
>
  {text}
</a>
