---
import Icon from "astro-iconify";

import { info } from "@/data";
const {
  socials: { instagram },
} = info;
---

<a
  href={instagram}
  target="_blank"
  rel="noopener noreferrer"
  class:list={[
    "transition-all duration-300 ease-in-out cursor-pointer p hover:scale-95 rounded-3xl px-4 py-2",
    Astro.props.class,
  ]}
>
  <Icon name="mdi:instagram" size="32px" class="p inline" />
  Instagram
</a>
