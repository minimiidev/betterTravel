---
import Icon from "astro-iconify";

interface Prop {
  instagram: string;
}

const { instagram } = Astro.props;
---

<a
  href={instagram}
  class:list={[
    "transition-all duration-300 ease-in-out cursor-pointer p hover:scale-95 rounded-3xl px-4 py-2",
    Astro.props.class,
  ]}
>
  <Icon name="mdi:instagram" size="32px" class="inline p" />
  Instagram
</a>
