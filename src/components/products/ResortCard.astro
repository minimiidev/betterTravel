---
import Icon from "astro-iconify";

interface Props {
  name: string;
  slug: string;
  location: string;
  imgSrc: string;

  price: number;
  currency: string;
}

const {
  name,
  currency,

  slug,
  imgSrc,

  price,
  location,
} = Astro.props;

const locationSlug = location.toLocaleLowerCase();
---

<article
  class="relative flex h-[300px] w-full md:w-[350px] flex-col items-center justify-center gap-2 rounded-md bg-white shadow-md shadow-blue-300 transition-all duration-300 ease-in-out hover:bg-slate-200"
>
  <div class="w-full h-[150px] overflow-hidden rounded-t-md">
    <img
      src={imgSrc}
      alt={name}
      class="h-full w-full object-cover transition-all duration-[1s] ease-in-out hover:scale-105"
    />
  </div>
  <div class="flex-1 w-full px-4">
    <div class="mb-2">
      <h3 class="h3">{name}</h3>
      <a href={`/${locationSlug}/`} class="opacity-70 hover:underline"
        >{location}</a
      >
    </div>
    <div class="flex items-center justify-between py-2 border-t border-b">
      <p>Precio por Noche</p>
      <p class="font-bold"><span>{currency}</span>$ <span>{price}</span></p>
    </div>
  </div>
  <a
    href={`/resorts/${slug}`}
    class="absolute -bottom-5 z-10 min-w-[120px] rounded-md shadow-sm bg-orange-500 py-2 text-center font-bold text-white"
    >Mas Detalles</a
  >
</article>
